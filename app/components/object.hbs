<div class="object container {{@object.name}}">
  <img class="image" src="/assets/objects/{{@object.name}}.png" alt="">
  <div class="occupied-area"></div>
  {{#if @object.isInteractive}}
    <div class="interactive-area" {{on "click" this.showIcons}} {{on-click-outside (fn this.removeIcons)}}></div>
  {{/if}}
</div>

{{#if this.isClicked}}
  <div id="interaction-icons" class="interaction-icons">
    <div class="look" {{on "click" this.lookAt}}>
      <img src="/assets/images/inspect-icon.png" class="icon">
    </div>
    {{#if @object.canInteractWith}}
      <div class="interact" {{on "click" this.interactWith}}>
        <img src="/assets/images/interact-icon.png" class="icon">
      </div>
    {{/if}}
  </div>
{{/if}}